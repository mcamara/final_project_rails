<div class="col-md-6"> 
  <h1>Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <label for="inputEmail4">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", {:class => 'form-control form-control-lg'} %>
    </div>

    <div class="form-group">
      <label for="inputPassword4">Password</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, {:class => 'form-control form-control-lg'} %>
    </div>

    <div class="form-group">
      <label for="inputPassword4">Password Confirmation</label>
      <%= f.password_field :password_confirmation, {:class => 'form-control form-control-lg'} %>
    </div>

    <button type="submit" class="btn btn-primary">Sign up</button>
  <% end %>

  <%= render "users/shared/links" %>
</div>
