<div class="col-md-6"> 
  <h1>Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <label for="inputEmail4">Email</label><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", {:class => 'form-control form-control-lg'} %>
    </div>

    <div class="form-group">
      <label for="inputPassword4">Password</label><br />
      <%= f.password_field :password, autocomplete: "current-password", {:class => 'form-control form-control-lg'} %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <label class="form-check-label" for="gridCheck">
        Remember me
        </label>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

<%= render "users/shared/links" %>    
</div>