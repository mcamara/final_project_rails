<h2>Sign up</h2>
<div class="row justify-content-md-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email" %>
    </div>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Enter username" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter password" %>
      <% if @minimum_password_length %>
        <small id="emailHelp" class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "exampleInputPassword1", placeholder: "Enter password confirmation" %>
    </div>

    <%= f.file_field :avatar %>
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  <% end %>
</div>

