<h1>My Photos</h1>

<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-3">
      <div class="card" style="width: 250px">
        <div class="card-header">
          <%= link_to photo.title, photo_url(photo) %>
          <p class="card-text float-right"><small class="text-muted">by <%= photo.user.username %></small></p>
        </div>
        <div class="card-body">
          <img class="card-img-top" src="<%= url_for(photo.image) %>" alt="Card image cap">
          <p class="card-text"><%= photo.description %></p>
          <p class="card-text float-right"><small class="text-muted"><%= time_ago_in_words(photo.updated_at) %> ago</small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
