<header class="jumbotron">
  <div class="container">
    <h1 class="display-4">My Photos Collection</h1>
    <p class="lead">View photos I have uploaded!</p>
  </div>    
</header>

<div class="container">
  <div class="row" style="display:flex; flex-wrap: wrap">
    <% @photos.each do |photo| %>
      <div class="col-3">
        <div class="card">
          <% if photo.image.attached? %>
            <img class="card-img-top" src="<%= url_for(photo.image) %>" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to photo.title, photo_url(photo) %></h5>
            <p class="card-text"><%= photo.description %></p>
            <p class="card-text float-right"><small class="text-muted"><%= time_ago_in_words(photo.updated_at) %> ago</small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
